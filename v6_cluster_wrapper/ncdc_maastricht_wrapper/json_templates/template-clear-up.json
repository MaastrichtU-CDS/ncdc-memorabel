{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "clear-up",
      "labels": {
        "app": "clear-up-app"
      },
      "namespace": "ncdc-pht"
    },
    "spec": {
      "volumes": [
        {
          "name": "data",
          "persistentVolumeClaim": {
            "claimName": "ncdc-pht-storage"
          }
        }
      ],
      "containers": [
        {
          "name": "output-watcher",
          "image": "busybox:latest",
          "command": [],
          "volumeMounts": [
            {
              "name": "data",
              "mountPath": "/mnt/data"
            }
          ]
        }
      ],
      "restartPolicy": "Never"
    }
  }