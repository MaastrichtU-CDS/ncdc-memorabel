{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "start-up",
    "labels": {
      "app": "start-up-app",
      "task": ""
    },
    "namespace": "ncdc-pht"
  },
  "spec": {
    "volumes": [
      {
        "name": "data",
        "persistentVolumeClaim": {
          "claimName": "ncdc-pht-storage"
        }
      }
    ],
    "containers": [
      {
        "name": "input-watcher",
        "image": "busybox",
        "command": [],
        "volumeMounts": [
          {
            "name": "data",
            "mountPath": "/mnt/data"
          }
        ]
      }
    ],
    "restartPolicy": "Never"
  }
}